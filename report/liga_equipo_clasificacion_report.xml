<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Ejemplo de informe asociado a equipo (se genera al darle  aimprimir 
        desde la vista Form de un equipo) -->
    <template id="report_partido_view">
        <!-- Aqui la estructura a seguir -->
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.internal_layout">
                    <div class="page">
                        <h2>Partido: <span t-field="doc.id" /></h2>
                        <p>Equipo Local: <span t-field="doc.equipo_casa.nombre" /></p>
                        <p>Goles Local: <span t-field="doc.goles_casa" /></p>
                        <p>Equipo Visitante: <span t-field="doc.equipo_fuera.nombre" /></p>
                        <p>Goles Visitante: <span t-field="doc.goles_fuera" /></p>
                        <p>Fecha: <span t-field="doc.fecha" /></p>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <!-- Realmente, este es el informe, lo de arriba es la plantilla que utilizara el informe -->
    <report
    id="report_partido"
    model="liga.partido"
    string="Informe de Partido"
    name="EJ07-LigaFutbol.report_partido_view"
    file="EJ07-LigaFutbol.report_partido_view"
    report_type="qweb-pdf" />
</odoo>